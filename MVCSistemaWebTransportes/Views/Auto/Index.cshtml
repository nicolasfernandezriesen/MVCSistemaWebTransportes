@model IEnumerable<MVCSistemaWebTransportes.Models.Auto>
@{
    ViewBag.Title = "Index";
}

<div>
    <p>
        @Html.ActionLink("Crear", "Create")
    </p>
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Modelo)</th>
            <th>@Html.DisplayNameFor(model => model.Marca)</th>
            <th>@Html.DisplayNameFor(model => model.Año)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>item.Modelo)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.Año)</td>
                <td>@Html.DisplayFor(modelItem => item.Color)</td>
                <td>@Html.ActionLink("Detalle","Details", new { id = item.Id })</td>
                <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</td>
            </tr>
        }

    </table>
</div>